	.interest-card {
		text-align: center;
		padding: 1.5rem;
		border-radius: 0.5rem;
		background: rgba(45, 0, 100, 0.3);
		border: 1px solid rgba(138, 43, 226, 0.3);
		transition: all 0.3s ease;
	}
	
	.interest-card:hover {
		transform: translateY(-5px);
		box-shadow: 0 0 8px var(--neon-purple);
	}
	
	.interest-icon {
		font-size: 2.5rem;
		margin-bottom: 1rem;
