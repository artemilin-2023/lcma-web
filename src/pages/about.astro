	.timeline {
		position: relative;
		max-width: 800px;
		margin: 0 auto;
	}
	
	.timeline::before {
		content: '';
		position: absolute;
		height: 100%;
		width: 2px;
		background: var(--neon-purple);
		left: 50%;
		transform: translateX(-50%);
		box-shadow: 0 0 8px var(--neon-purple);
	}
	
	.timeline-item {
		position: relative;
		margin-bottom: 2.5rem;
	}
	
	.timeline-dot {
		position: absolute;
		left: 50%;
		transform: translateX(-50%);
		width: 20px;
		height: 20px;
		border-radius: 50%;
		background: var(--neon-pink);
		box-shadow: 0 0 10px var(--neon-pink);
		z-index: 10;
	}
	
	.timeline-content {
		width: calc(50% - 40px);
		padding: 1.5rem;
		position: relative;
	}
	
	.timeline-item:nth-child(odd) .timeline-content {
		margin-left: auto;
	}
	
	.timeline-content h3 {
		font-family: var(--font-kawaii);
		margin-bottom: 0.75rem;
		color: var(--neon-blue);
		text-shadow: 0 0 5px var(--neon-blue);
	}
	
	.interests-section {
		padding: 2.5rem;
		margin: 4rem 0;
	}
	
	.interests-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
		gap: 2rem;
		margin-top: 2rem;
