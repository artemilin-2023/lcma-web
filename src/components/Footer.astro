---
const today = new Date();
import { SOCIAL_LINKS, SITE_TITLE } from '../consts';
---

<footer class="neon-footer">
	<div class="footer-container">
		<div class="social-links">
			<a href={SOCIAL_LINKS.github} class="social-icon" aria-label="GitHub" target="_blank" rel="noopener">
				<svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" class="icon"><path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/></svg>
			</a>
			<a href={SOCIAL_LINKS.telegram} class="social-icon" aria-label="Telegram" target="_blank" rel="noopener">
				<svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 32 32" class="icon"><path d="M16 .5C7.437.5.5 7.438.5 16S7.438 31.5 16 31.5c8.563 0 15.5-6.938 15.5-15.5S24.562.5 16 .5m7.613 10.619l-2.544 11.988c-.188.85-.694 1.056-1.4.656l-3.875-2.856l-1.869 1.8c-.206.206-.381.381-.781.381l.275-3.944l7.181-6.488c.313-.275-.069-.431-.482-.156l-8.875 5.587l-3.825-1.194c-.831-.262-.85-.831.175-1.231l14.944-5.763c.694-.25 1.3.169 1.075 1.219z"/></svg>
			</a>
		</div>
		
		<div class="copyright">
			<p class="gradient-text">
				&copy; {today.getFullYear()} {SITE_TITLE}. Все права защищены.
			</p>
		</div>
	</div>
</footer>

<style>
	.neon-footer {
		background: rgba(10, 0, 31, 0.7);
		backdrop-filter: blur(5px);
		border-top: 2px solid var(--neon-purple);
		box-shadow: 0 0 10px var(--neon-purple);
		padding: 2rem 0;
		margin-top: 0;
	}

	.footer-container {
		max-width: 1200px;
		margin: 0 auto;
		padding: 0 1rem;
		display: flex;
		flex-direction: column;
		align-items: center;
		gap: 1.5rem;
	}

	.social-links {
		display: flex;
		gap: 1.5rem;
	}

	.social-icon {
		display: flex;
		justify-content: center;
		align-items: center;
		width: 42px;
		height: 42px;
		border-radius: 50%;
		border: 2px solid var(--neon-purple);
		transition: all 0.3s ease;
	}

	.social-icon:hover {
		transform: translateY(-3px);
		box-shadow: 0 0 10px var(--neon-purple);
	}

	.icon {
		fill: #fff;
		transition: all 0.3s ease;
	}

	.social-icon:hover .icon {
		fill: var(--neon-pink);
		filter: drop-shadow(0 0 2px var(--neon-pink));
	}

	.copyright p {
		font-size: 0.9rem;
		text-align: center;
		margin: 0;
	}

	@media (max-width: 768px) {
		.social-links {
			gap: 1rem;
		}
	}
</style>
