---
// Компонент отображения прогресса прокрутки страницы
---

<div class="scroll-progress-container">
  <div id="scroll-progress-bar" class="scroll-progress-bar"></div>
</div>

<style>
  .scroll-progress-container {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 5px;
    z-index: 1000;
    background-color: rgba(255, 255, 255, 0.1);
  }

  .scroll-progress-bar {
    height: 100%;
    width: 0;
    background: linear-gradient(to right, var(--neon-purple), var(--neon-pink));
    box-shadow: 0 0 10px var(--neon-purple);
    transition: width 0.1s ease;
  }
</style>

<script>
  const progressBar = document.getElementById('scroll-progress-bar');
  
  function updateScrollProgress() {
    if (!progressBar) return;
    
    const scrollTop = window.scrollY;
    const scrollHeight = document.documentElement.scrollHeight - window.innerHeight;
    const scrollPercentage = (scrollTop / scrollHeight) * 100;
    
    progressBar.style.width = `${scrollPercentage}%`;
  }
  
  // Обновлять прогресс при прокрутке
  window.addEventListener('scroll', updateScrollProgress);
  
  // Обновлять прогресс при изменении размера окна
  window.addEventListener('resize', updateScrollProgress);
  
  // Инициализация при загрузке страницы
  document.addEventListener('DOMContentLoaded', updateScrollProgress);
</script> 