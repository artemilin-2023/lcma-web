---
import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE } from '../consts';
---

<header class="neon-header">
	<div class="header-container">
		<div class="site-title">
			<a href="/" class="logo-link">
				<h1 class="neon-text-flicker">{SITE_TITLE}</h1>
			</a>
		</div>
		
		<nav class="main-nav">
			<ul>
				<li><HeaderLink href="/">Главная</HeaderLink></li>
				<li><HeaderLink href="/blog">Блог</HeaderLink></li>
				<li><HeaderLink href="/about">Обо мне</HeaderLink></li>
				<li><HeaderLink href="/contact">Контакты</HeaderLink></li>
			</ul>
		</nav>
	</div>
</header>

<style>
	.neon-header {
		background: rgba(10, 0, 31, 0.7);
		backdrop-filter: blur(5px);
		border-bottom: 2px solid var(--neon-purple);
		box-shadow: 0 0 10px var(--neon-purple);
		padding: 1rem 0;
		position: sticky;
		top: 0;
		z-index: 100;
	}

	.header-container {
		display: flex;
		justify-content: space-between;
		align-items: center;
		max-width: 1200px;
		margin: 0 auto;
		padding: 0 1rem;
	}

	.site-title h1 {
		font-size: 2rem;
		margin: 0;
		font-family: 'Montserrat', sans-serif;
		font-weight: 700;
	}

	.logo-link {
		text-decoration: none;
	}

	.main-nav ul {
		display: flex;
		gap: 1.5rem;
		list-style: none;
		margin: 0;
		padding: 0;
	}

	@media (max-width: 768px) {
		.header-container {
			flex-direction: column;
			gap: 1rem;
		}

		.main-nav ul {
			gap: 1rem;
			justify-content: center;
			flex-wrap: wrap;
		}
	}
</style>
