---
import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE } from '../consts';
---

<header class="neon-header">
	<div class="header-container" id="header-container">
		<div class="site-title">
			<a href="/" class="logo-link">
				<span class="kawaii-logo">/ᐠ｡ꞈ｡ᐟ\</span>
				<h1 class="neon-text-flicker">{SITE_TITLE}</h1>
			</a>
		</div>
		
		<nav class="main-nav">
			<ul>
				<li><HeaderLink href="/">Главная</HeaderLink></li>
				<li><HeaderLink href="/blog">Блог</HeaderLink></li>
				<li><HeaderLink href="/about">Обо мне</HeaderLink></li>
				<li><HeaderLink href="/contact">Контакты</HeaderLink></li>
			</ul>
		</nav>
		
		<button class="mobile-menu-toggle" aria-label="Меню" aria-expanded="false">
			<span class="bar"></span>
			<span class="bar"></span>
			<span class="bar"></span>
		</button>
	</div>
</header>

<style>
	.neon-header {
		background: rgba(10, 0, 31, 0.8);
		backdrop-filter: blur(10px);
		border-bottom: 2px solid var(--neon-purple);
		box-shadow: 0 0 15px var(--neon-purple);
		padding: 0.8rem 0;
		position: sticky;
		top: 0;
		z-index: 100;
	}

	.header-container {
		display: flex;
		justify-content: space-between;
		align-items: center;
		max-width: 1200px;
		margin: 0 auto;
		padding: 0 1rem;
	}

	.site-title {
		display: flex;
		align-items: center;
	}

	.site-title h1 {
		font-size: 1.8rem;
		margin: 0;
		font-family: var(--font-kawaii);
		font-weight: 700;
	}

	.kawaii-logo {
		font-size: 1.5rem;
		margin-right: 0.8rem;
		display: inline-block;
		color: var(--neon-pink);
		text-shadow: 0 0 5px var(--neon-pink);
		animation: bobAnimation 3s ease-in-out infinite;
	}

	@keyframes bobAnimation {
		0%, 100% { transform: translateY(0) rotate(0deg); }
		30% { transform: translateY(-5px) rotate(-5deg); }
		60% { transform: translateY(3px) rotate(5deg); }
	}

	.logo-link {
		display: flex;
		align-items: center;
		text-decoration: none;
		padding: 0.3rem 0.8rem;
		border-radius: 20px;
		transition: all 0.3s ease;
	}

	.logo-link:hover .kawaii-logo {
		animation: excited 0.5s ease-in-out infinite;
	}

	@keyframes excited {
		0%, 100% { transform: translateY(0) rotate(0deg); }
		25% { transform: translateY(-7px) rotate(-7deg); }
		50% { transform: translateY(0) rotate(0deg); }
		75% { transform: translateY(-7px) rotate(7deg); }
	}

	.main-nav ul {
		display: flex;
		gap: 1rem;
		list-style: none;
		margin: 0;
		padding: 0;
	}
	
	.mobile-menu-toggle {
		display: none;
		flex-direction: column;
		justify-content: space-between;
		width: 30px;
		height: 21px;
		background: transparent;
		border: none;
		cursor: pointer;
		padding: 0;
		z-index: 120;
	}
	
	.bar {
		width: 100%;
		height: 3px;
		background-color: var(--neon-purple);
		border-radius: 10px;
		transition: all 0.3s ease-in-out;
		box-shadow: 0 0 5px var(--neon-purple);
	}

	@media (max-width: 768px) {
		.header-container {
			flex-direction: column;
			gap: 1rem;
		}

		.main-nav ul {
			gap: 0.6rem;
			justify-content: center;
			flex-wrap: wrap;
		}
		
		.site-title h1 {
			font-size: 1.5rem;
		}
	}
	
	@media (max-width: 560px) {
		.header-container {
			flex-direction: row;
		}
		
		.mobile-menu-toggle {
			display: flex;
		}
		
		.main-nav {
			position: fixed;
			top: 0;
			right: -100%;
			width: 80%;
			max-width: 300px;
			height: 100vh;
			background: rgba(10, 0, 31, 0.95);
			backdrop-filter: blur(15px);
			padding: 5rem 2rem 2rem;
			transition: all 0.4s ease-in-out;
			z-index: 110;
			border-left: 2px solid var(--neon-purple);
			box-shadow: -5px 0 20px rgba(179, 136, 255, 0.3);
		}
		
		.main-nav.active {
			right: 0;
		}
		
		.main-nav ul {
			flex-direction: column;
			gap: 1.5rem;
			align-items: flex-start;
		}
		
		.main-nav ul li {
			width: 100%;
		}
		
		.mobile-menu-toggle.active .bar:nth-child(1) {
			transform: translateY(9px) rotate(45deg);
		}
		
		.mobile-menu-toggle.active .bar:nth-child(2) {
			opacity: 0;
		}
		
		.mobile-menu-toggle.active .bar:nth-child(3) {
			transform: translateY(-9px) rotate(-45deg);
		}
	}
</style>

<script>
	// Мобильное меню
	const mobileMenuToggle = document.querySelector('.mobile-menu-toggle');
	const mainNav = document.querySelector('.main-nav');
	
	if (mobileMenuToggle && mainNav) {
		mobileMenuToggle.addEventListener('click', () => {
			mobileMenuToggle.classList.toggle('active');
			mainNav.classList.toggle('active');
			
			// Обновляем атрибут aria-expanded для доступности
			const isExpanded = mobileMenuToggle.classList.contains('active');
			mobileMenuToggle.setAttribute('aria-expanded', isExpanded ? 'true' : 'false');
			
			// Блокируем прокрутку страницы при открытом меню
			document.body.style.overflow = isExpanded ? 'hidden' : '';
		});
		
		// Закрываем меню при клике на ссылку
		const navLinks = mainNav.querySelectorAll('a');
		navLinks.forEach(link => {
			link.addEventListener('click', () => {
				mobileMenuToggle.classList.remove('active');
				mainNav.classList.remove('active');
				mobileMenuToggle.setAttribute('aria-expanded', 'false');
				document.body.style.overflow = '';
			});
		});
	}
</script>
