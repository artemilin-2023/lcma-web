---
interface Props {
	date: Date;
}

const { date } = Astro.props;

const russianMonths = [
	'января', 'февраля', 'марта', 'апреля', 'мая', 'июня', 
	'июля', 'августа', 'сентября', 'октября', 'ноября', 'декабря'
];

const formattedDate = `${date.getDate()} ${russianMonths[date.getMonth()]} ${date.getFullYear()}`;
---

<time datetime={date.toISOString()}>
	{formattedDate}
</time>
